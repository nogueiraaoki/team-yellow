= form_for @goal_record do |f|
  - if @goal_record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@goal_record.errors.count, "error")} prohibited this goal_record from being saved:"
      %ul
        - @goal_record.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :goal
    = f.text_field :goal
  .field
    = f.label :act
    = f.text_field :act
  .actions
    = f.submit 'Save'
