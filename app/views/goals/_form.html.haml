= form_for @goal do |f|
  - if @goal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@goal.errors.count, "error")} prohibited this goal from being saved:"
      %ul
        - @goal.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :end_at
    = f.datetime_select :end_at
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :kind
    = f.text_field :kind
  .actions
    = f.submit 'Save'
